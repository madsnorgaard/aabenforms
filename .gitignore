# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# Ignore sensitive information
/web/sites/*/settings.*.php
/web/sites/*/services*.yml

# Ignore Drupal's file directory
/web/sites/*/files/

# Ignore SimpleTest multi-site environment.
/web/sites/simpletest

# Ignore files generated by PhpStorm
/.idea/

# Ignore .env files as they are personal
/.env

# Ignore Drupal development files
/.csslintrc
/.editorconfig
/.eslintignore
/.eslintrc.json
/.gitattributes
/.ht.router.php

# Ignore DDEV (keep .ddev/config.yaml and commands)
/.ddev/*
!/.ddev/config.yaml
!/.ddev/commands/

# Ignore database dumps
*.sql
*.sql.gz

# Keep important .ddev config
!.ddev/config.yaml

# Ignore node_modules if using npm/yarn for theme development
node_modules/

# Ignore OS files
.DS_Store
Thumbs.db

# Keep custom code
!/web/modules/custom/
!/web/themes/custom/
!/web/profiles/custom/

# Keep config sync directory
!/config/sync/

# Test output directories
/coverage/
/.phpunit.cache/
/web/sites/simpletest/
/sites/simpletest/browser_output/
